    useEffect(() => {
        if (isSyncing && !syncStartTime) {
            setSyncStartTime(Date.now());
        } else if (!isSyncing && syncStartTime) {
            setSyncStartTime(null);
        }
    }, [isSyncing, syncStartTime]);

    // Track last update
